  {
    "name": "Whatsapp",
    "settings": [
      {
        "type": "header",
        "content": "Botão WhatsApp"
      },
      {
        "type": "checkbox",
        "id": "addzap",
        "label": "Ativa o botão de WhatsApp no site",
        "default": true
      },
      {
        "type": "textarea",
        "id": "numberzap",
        "label": "Número do WhatsApp",
        "info": "O número que vai receber a mensagem deve ser colocado com 55 - código do país - seguido do DDD do estado e depois o número com o prefixo incluso. Ex: 5551988887777"
      },
      {
        "type": "textarea",
        "id": "messagezap",
        "label": "Mensagem pré-definida",
        "info": "Digite a mensagem que aparecerá automaticamente quando o cliente abrir o WhatsApp",
        "default": "Hello! I would like more information about the products."
      }
    ]
  },
  {
